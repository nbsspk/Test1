<body>
  <h1>🎉 보물찾기 결과 확인 🎉</h1>
  <p id="result">당첨 결과를 확인해보세요!</p>
  <button onclick="checkResult()">결과 확인</button>

  <script>
    function checkResult() {
      const results = ['🥇 1등 당첨! 신라호텔 식사권 🎁', '🥈 2등 당첨! 아웃백 식사권 🎁', '🥉 3등 당첨! 애슐리 식사권 🎁'];
      const randomIndex = Math.floor(Math.random() * results.length);
      document.getElementById('result').innerText = results[randomIndex];
    }
  </script>
